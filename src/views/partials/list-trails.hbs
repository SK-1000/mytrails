<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Trail</th>
      <th>Brief discription</th>
      <th>Start Point</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Distance KM</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each traillist.trails}}
      <tr>
        <td>
          {{trailname}}
        </td>
        <td>
          {{briefdescription}}
        </td>
        <td>
          {{startpoint}}
        </td>
        <td>
          {{longitude}}
        </td>
        <td>
          {{latitude}}
        </td>
        <td>
          {{distancekm}}
        </td>
        <td>
          <a href="/trail/{{../traillist._id}}/edittrail/{{id}}" class="ui icon button">
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/traillist/{{../traillist._id}}/deletetrail/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>