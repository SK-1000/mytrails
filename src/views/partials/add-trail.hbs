<form class="box" action="/traillist/{{traillist._id}}/addtrail" method="POST">
  <label>Enter Trail Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Trail Name" name="trailname">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Brief Description" name="briefdescription">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Start Point" name="startpoint">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter longitude of Start Point" name="longitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter latitude of Start Point" name="latitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Trail Distance (KM)" name="distancekm">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Trail</button>
</form>